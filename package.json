{
  "name": "qmit-sdk",
  "version": "1.0.0",
  "description": "QMIT development SDK and CLI",
  "main": "sdk/node/dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qmit-pro/qmit-sdk.git"
  },
  "author": "QMIT Inc.",
  "license": "private",
  "private": true,
  "files": [
    "cli/dist",
    "sdk/node/dist"
  ],
  "bin": {
    "qmit": "cli/dist/index.js"
  },
  "scripts": {
    "dev-cli": "nodemon --config ./cli/nodemon.json",
    "test-cli": "jest --detectOpenHandles --config ./cli/jest.json",
    "build-cli": "rm -rf cli/dist && tsc -p cli/tsconfig.json",
    "dev": "nodemon --config ./sdk/node/nodemon.json",
    "test": "jest --detectOpenHandles --config ./sdk/node/jest.json",
    "build": "rm -rf sdk/node/dist && tsc -p sdk/node/tsconfig.json",
    "lint": "tslint -p tsconfig.json",
    "deps": "yarn-check -u"
  },
  "dependencies": {
    "child-process-promise": "^2.2.1",
    "ioredis": "^4.17.1",
    "lodash": "^4.17.15",
    "moleculer": "^0.14.6",
    "redlock": "^4.1.0",
    "vault-sync": "1.1.10",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/child-process-promise": "^2.2.1",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.151",
    "@types/node": "^14.0.1",
    "@types/yargs": "^15.0.5",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "typescript": "^3.9.2",
    "yarn-check": "^0.0.3"
  },
  "engines": {
    "node": ">= 8.x.x"
  }
}
